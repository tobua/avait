{
  "name": "avait",
  "description": "Async error handling without try-catch.",
  "version": "0.0.0-development",
  "repository": "github:tobua/avait",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "start": "padua watch",
    "test": "vitest run"
  },
  "padua": {
    "entry": [
      "index.ts",
      "worker.ts"
    ],
    "esbuild": {
      "platform": "node",
      "format": "esm",
      "define": {
        "process.env.NODE_ENV": "\"production\""
      }
    }
  },
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "exports": {
    ".": {
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "worker.js"
  ],
  "keywords": [
    "await"
  ],
  "devDependencies": {
    "axios": "^1.4.0",
    "node-fetch": "^3.3.2",
    "padua": "^2.0.1",
    "vitest": "^0.34.2"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "engines": {
    "node": ">= 16"
  }
}
